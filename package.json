{
  "name": "mindbuffer",
  "version": "0.12.1",
  "productName": "MindBuffer",
  "description": "A note's manager app with the visuals of a Webchat",
  "repository": "https://github.com/maxkalavera/mindbuffer",
  "license": "MIT",
  "author": {
    "name": "Max Hernandez",
    "email": "maxhernandezcastillo@gmail.com"
  },
  "engines": {
    "node": "20.11.x"
  },
  "binary": {
    "module_name": "mindbuffer",
    "module_path": "./bin",
    "host": "https://github.com/maxkalavera/mindbuffer"
  },
  "scripts": {
    "build:main:install": "npm --prefix ./.package install ./.package && npm --prefix ./.package run rebuild",
    "build:main:rebuild": "npm --prefix ./.package run rebuild",
    "build:main": "babel-node main.esbuild.mjs && npm run build:main:install",
    "build:preload": "babel-node preload.esbuild.mjs",
    "build:renderer": "babel-node renderer.esbuild.mjs",
    "build:prebuild": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:darwin": "rimraf ./.package && npm run build:prebuild && electron-builder build --config electron-builder.config.js --projectDir ./.package --mac",
    "build:win32": "rimraf ./.package && npm run build:prebuild && electron-builder build --config electron-builder.config.js --projectDir ./.package --win",
    "build:linux": "rimraf ./.package && npm run build:prebuild && electron-builder build --config electron-builder.config.js --projectDir ./.package --linux",
    "start:electron": "electron ./.package",
    "start": "cross-env MINDBUFFER_ENVIRONMENT=development npm run build:prebuild && concurrently --kill-others --kill-others-on-fail \"npm run start:electron\" \"babel-node -- renderer.esbuild.mjs --watch\"",
    "test:build": "rimraf ./.package && cross-env MINDBUFFER_ENVIRONMENT=testing npm run build:prebuild && cross-env MINDBUFFER_ENVIRONMENT=testing electron-builder build --config electron-builder.config.js --projectDir ./.package",
    "test:start": "cross-env MINDBUFFER_ENVIRONMENT=testing concurrently --kill-others --kill-others-on-fail -s \"first\" -c \"gray,yellow\" \"chromedriver\" \"jest --runInBand --detectOpenHandles --forceExit\"",
    "test": "npm run test:build && npm run test:start"
  },
  "devDependencies": {
    "@babel/node": "^7.23.9",
    "@electron/rebuild": "^3.6.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@jest/globals": "^29.7.0",
    "@reduxjs/toolkit": "^2.2.4",
    "@types/css-modules": "^1.0.5",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/selenium-webdriver": "^4.1.22",
    "@types/uuid": "^9.0.8",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dompurify": "^3.1.3",
    "electron": "28.3.3",
    "electron-builder": "24.13.3",
    "electron-chromedriver": "28.3.3",
    "esbuild": "0.21.1",
    "esbuild-node-externals": "^1.13.1",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-write-file": "^0.0.4",
    "fast-deep-equal": "^3.1.3",
    "jest": "^29.7.0",
    "marked": "^12.0.2",
    "react": "^18.3.1",
    "react-content-loader": "^7.0.0",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.23.1",
    "redux": "^5.0.1",
    "rimraf": "^5.0.7",
    "selenium-webdriver": "^4.20.0",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1"
  },
  "dependencies": {
    "better-sqlite3": "10.1.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^9.0.0",
    "flat": "^6.0.1",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "sequelize": "^6.37.3",
    "umzug": "^3.8.0"
  },
  "build": {
    "architectures": {
      "linux": [
        "x64",
        "arm64",
        "armv7l"
      ],
      "mac": [
        "x64",
        "arm64"
      ],
      "win": [
        "x64",
        "arm64"
      ]
    }
  }
}
